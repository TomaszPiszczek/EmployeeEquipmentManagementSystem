<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="45.0" prefWidth="887.0" stylesheets="@employee_item.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.employeeequipmentmanagementsystem.controller.EmployeeItemController">
   <children>
      <Label fx:id="name" alignment="CENTER" prefHeight="47.0" prefWidth="160.0" text="Imie">
         <font>
            <Font name="Tahoma Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="surname" alignment="CENTER" prefHeight="41.0" prefWidth="160.0" text="Nazwisko">
         <font>
            <Font name="Tahoma Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="daysToTraining" alignment="CENTER" prefHeight="46.0" prefWidth="240.0" text="Data najbliższego badania">
         <font>
            <Font name="Tahoma Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="numberOfTools" alignment="CENTER" prefHeight="45.0" prefWidth="167.0" text="Liczba narzędzi">
         <font>
            <Font name="Tahoma Bold" size="18.0" />
         </font>
      </Label>
      <HBox prefHeight="45.0" prefWidth="160.0">
         <children>
            <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="189.0" styleClass="info-button" stylesheets="@employee_item.css" text="WIĘCEJ" textFill="WHITE">
               <font>
                  <Font name="Tahoma Bold" size="12.0" />
               </font>
               <graphic>
                  <FontAwesomeIcon fill="WHITE" glyphName="INFO_CIRCLE" size="2em" />
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</HBox>
